@model ArticleViewModel
@{
    ViewData["Title"] = "UserFavouriteArticles";
    Layout = "~/Views/Shared/_UserProfileLayout.cshtml";
}

<h2>UserFavouriteArticles</h2>

@if (Model.articlesList.Count == 0)
{
    <h4>User has not any favourite blog</h4>
}

@foreach (var item in Model.articlesList)
{
    <div class="col-md-4">
        <div class="col-md-12 blogCards text-center">
            @*<a href="/Blog/ReadBlog/@item.ID"><img src="~/Images/@item.DefaultImage" /></a>*@
            <a asp-controller="Article" asp-action="ReadArticle" asp-route-id="@item.ID"><img src="~/Images/@item.DefaultImage" /></a>
        </div>
        <div class="col-md-12 blogCards">
            <h3>@item.Title </h3>
        </div>

        <div class="col-md-12 blogCards">
            <h5>@item.Text. </h5>
        </div>
        <div class="col-md-12 blogCards">
            @*@Html.ActionLink("Read", "ReadBlog", "Blog", new { id = item.ID }, new { @class = "btn btn-info" })*@
            <a asp-controller="Article" asp-action="ReadArticle" asp-route-id="@item.ID" class = "btn btn-info">Read</a>
            <br /> <br />

        </div>
    </div>
}


