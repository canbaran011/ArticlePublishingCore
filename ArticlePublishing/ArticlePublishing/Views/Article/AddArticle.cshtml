@model ArticleViewModel
@{
    ViewData["Title"] = "AddArticle";
    Layout = "~/Views/Shared/_UserProfileLayout.cshtml";
}

<h2 class="viewTitles">Add Your Article</h2>

<br /><br />
<div class="col-md-12">
    <form asp-controller="Article" asp-action="AddArticle" method="post" enctype="multipart/form-data">
        <div class="input-group">
            <span class="input-group-addon " id="txtTitle">Title</span>
            <input asp-for="article.Title" type="text" class="form-control" placeholder="Enter article title" required="required" aria_describedby="txtTitle" />  
        </div> <br />
        <div class="input-group">
            <span class="input-group-addon " id="txtText">Text</span>
            <textarea asp-for="article.Text" style="resize:none" rows="10" class="form-control" placeholder="Enter article text" required="required" aria_describedby="txtText"></textarea>
        </div> <br />
        <div class="input-group col-md-6">
            <span class="input-group-addon " id="txtCategories">Categories</span>
            @*@Html.DropDownListFor(x => x.article.Categories.ID, (SelectList)Model.categoriSelectList, new { @class = "form-control", required = "required", aria_describedby = "txtCategories" })*@
            <select asp-for="article.CategoryID" asp-items="Model.categoriSelectList" class="form-control" required="required" aria_describedby="txtCategories"></select>

        </div> <br />
        @*@Html.TextBoxFor(m => m.DefaultImage, new { id = "file", type = "file", accept = "image/*" })*@
        <input type="file" id="file" name="file" accept="image/*" required="required"> <br />

        <input class="btn btn-info" type="submit">
    </form>
    <br /><br />
    <div class="alert alert-@ViewBag.Status" role="alert">@ViewBag.Warning</div>
</div>


